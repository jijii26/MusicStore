@model MusicStore.Models.ViewModels.Utilisateur.ModifierProfil

@{ ViewBag.Title = "Modifier Profil"; }

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Utilisateur", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @*
        On aurait aussi pu faire la balise form en html de la façon suivante:
        <form action="/Utilisateur/Edit" methode="post" enctype="multipart/form-data">
    *@
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.AncienMotDePasse, htmlAttributes: new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.AncienMotDePasse, new {
                   htmlAttributes = new {
                       @class = "form-control",
                       placeholder = Html.DescriptionFor(model => model.AncienMotDePasse)
                   }})
                @Html.ValidationMessageFor(model => model.AncienMotDePasse, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NouveauMotDePasse, htmlAttributes: new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.NouveauMotDePasse, new {
                   htmlAttributes = new {
                       @class = "form-control",
                       placeholder = Html.DescriptionFor(model => model.NouveauMotDePasse)
                   }})
                @Html.ValidationMessageFor(model => model.NouveauMotDePasse, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmerNouveauMotDePasse, htmlAttributes: new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.ConfirmerNouveauMotDePasse, new {
                   htmlAttributes = new {
                       @class = "form-control",
                       placeholder = Html.DescriptionFor(model => model.ConfirmerNouveauMotDePasse)
                   }})
                @Html.ValidationMessageFor(model => model.ConfirmerNouveauMotDePasse, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Courriel, htmlAttributes: new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.Courriel, new {
                   htmlAttributes = new {
                       @class = "form-control",
                       placeholder = Html.DescriptionFor(model => model.Courriel)
                   }})
                @Html.ValidationMessageFor(model => model.Courriel, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <input type="submit" value="Sauvegarder Profil" class="btn btn-success" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <a href="/Utilisateur/Delete" class="btn btn-danger">Supprimer profil</a>
            </div>
        </div>
    </div>
}
